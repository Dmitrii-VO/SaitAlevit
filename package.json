{
  "name": "saitgusia",
  "version": "1.0.0",
  "description": "Сайт проект",
  "main": "index.html",
  "scripts": {
    "start": "node scripts/server.js",
    "start:live": "live-server . --port=3000 --host=0.0.0.0 --ignore=node_modules,src,.git",
    "dev": "node scripts/server.js",
    "dev:live": "live-server . --port=3000 --host=0.0.0.0 --watch=. --ignore=node_modules,src,.git",
    "dev:mobile": "node scripts/server.js",
    "bot": "node telegram-bot/bot.js",
    "bot:dev": "nodemon telegram-bot/bot.js",
    "build": "npm run build:html && npm run build:css && npm run build:js",
    "build:html": "node scripts/build-html.js",
    "build:css": "postcss src/css/main.css -o styles.css",
    "build:js": "webpack --mode=production",
    "watch": "npm run watch:html & npm run watch:css & npm run watch:js",
    "watch:html": "nodemon --watch src/html scripts/build-html.js",
    "watch:css": "postcss src/css/main.css -o styles.css --watch",
    "watch:js": "webpack --mode=development --watch",
    "split:html": "node scripts/split-html.js",
    "check:network": "node scripts/check-network.js",
    "test:env": "node scripts/test-env.js",
    "test:telegram": "node scripts/test-telegram-send.js",
    "lint": "eslint src/js/**/*.js",
    "format": "prettier --write src/**/*.{html,css,js}",
    "test": "jest"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "node-telegram-bot-api": "^0.64.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^16.1.1",
    "postcss-preset-env": "^9.2.0",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "website",
    "frontend",
    "html",
    "css",
    "javascript"
  ],
  "author": "",
  "license": "MIT"
}
