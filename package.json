{
  "name": "saitgusia",
  "version": "1.0.0",
  "description": "Сайт проект",
  "main": "index.html",
  "scripts": {
    "start": "live-server public --port=3000",
    "dev": "live-server public --port=3000 --watch=src",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/css/main.css -o public/css/style.css",
    "build:js": "webpack --mode=production",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "postcss src/css/main.css -o public/css/style.css --watch",
    "watch:js": "webpack --mode=development --watch",
    "lint": "eslint src/js/**/*.js",
    "format": "prettier --write src/**/*.{html,css,js}",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-preset-env": "^9.2.0",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "keywords": ["website", "frontend", "html", "css", "javascript"],
  "author": "",
  "license": "MIT"
}